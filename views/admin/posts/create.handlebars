<h1>Create Post</h1>

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title"></label>
        <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" required>
    </div>
    <div class="form-group">
        <label for="file">Upload image</label>
        <input type="file" name="file" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
            {{#each Categories}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input type="checkbox" class="form-check-input" name="allowComments" id="allowComments" required>
            Allow Commnents </label>
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" name="body" id="body" rows="10" cols="30" placeholder="Enter Description"
            required></textarea>
    </div>
    <button class="btn btn-primary pull-right" type="submit"> Create Post</button>
</form>