<h1>categories</h1>

<div class="row">
    <div class="col-sm-4">
        <form action="/admin/categories/create" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter Title">

            </div>
            <button class="btn btn-primary">Create Category</button>
        </form>
    </div>
    <div class="col-sm-8">
        <table class="table">
            <thead>

                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th colspan="2">Action</th>
                </tr>

            </thead>
            <tbody>
                {{#each category}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{generateTime date 'MMMM Do YYYY'}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="POST">

                            <button type="submit" class="btn btn-danger">Delete</button></form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>